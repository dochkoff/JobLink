@inject IEmployerService employerService
@inject IApplicantService applicantService

<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Job" asp-action="Board">Jobs Board</a>
    </li>
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        if (await applicantService.ApplicantExistsByIdAsync(User.Id()))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Applicant" asp-action="MyJobApplications">My Job Applications</a>
            </li>
        }
        if (await employerService.EmployerExistsByIdAsync(User.Id()))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Employer" asp-action="MyJobPosts">My Job Posts</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Job" asp-action="Add">Add Job</a>
            </li>
        }
    }
</ul>